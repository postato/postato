# Environment Variables Template
# Copy this file to .env.development and fill in your actual values

# ====================================
# Template Configuration
# ====================================
# Architecture and authentication patterns are controlled by src/config/template.config.ts
# AI agents modify that file based on Postman collection analysis
# Fill in only the variables relevant to your configured pattern

# ====================================
# Test Environment Selector
# ====================================
# Options: dev, staging, prod
TEST_ENV=dev

# ====================================
# Development Environment
# ====================================

# Required: Base API Configuration
DEV_BASE_URL=https://api.dev.example.com
DEV_API_KEY=

# Microservices URLs (if ARCHITECTURE.MICROSERVICES is active)
DEV_MAIN_API_URL=https://api.dev.example.com
DEV_PAYMENTS_API_URL=https://payments-api.dev.example.com
DEV_NOTIFICATIONS_API_URL=https://notifications-api.dev.example.com

# Multiple Auth Tokens (if AUTH_PATTERN.MULTIPLE is active)
DEV_ADMIN_TOKEN=
DEV_SERVICE_ACCOUNT_TOKEN=
DEV_CLIENT_TOKEN=

# SSL Configuration (if sslEnabled is true)
DEV_SSL_ENABLED=false
DEV_SSL_CERT_PATH=certs/dev-ca.crt

# General Settings
DEV_TIMEOUT=5000
DEV_RETRY_ATTEMPTS=3

# ====================================
# Staging Environment
# ====================================

STAGING_BASE_URL=https://api.staging.example.com
STAGING_API_KEY=

# Microservices (if ARCHITECTURE.MICROSERVICES is active)
STAGING_MAIN_API_URL=https://api.staging.example.com
STAGING_PAYMENTS_API_URL=https://payments-api.staging.example.com
STAGING_NOTIFICATIONS_API_URL=https://notifications-api.staging.example.com

# Multiple Auth (if AUTH_PATTERN.MULTIPLE is active)
STAGING_ADMIN_TOKEN=
STAGING_SERVICE_ACCOUNT_TOKEN=
STAGING_CLIENT_TOKEN=

# SSL (if sslEnabled is true)
STAGING_SSL_ENABLED=false
STAGING_SSL_CERT_PATH=certs/staging-ca.crt

# General Settings
STAGING_TIMEOUT=10000
STAGING_RETRY_ATTEMPTS=2

# ====================================
# Production Environment
# ====================================

PROD_BASE_URL=https://api.example.com
PROD_API_KEY=

# Microservices (if ARCHITECTURE.MICROSERVICES is active)
PROD_MAIN_API_URL=https://api.example.com
PROD_PAYMENTS_API_URL=https://payments-api.example.com
PROD_NOTIFICATIONS_API_URL=https://notifications-api.example.com

# Multiple Auth (if AUTH_PATTERN.MULTIPLE is active)
PROD_ADMIN_TOKEN=
PROD_SERVICE_ACCOUNT_TOKEN=
PROD_CLIENT_TOKEN=

# SSL (if sslEnabled is true)
PROD_SSL_ENABLED=false
PROD_SSL_CERT_PATH=certs/prod-ca.crt

# General Settings
PROD_TIMEOUT=15000
PROD_RETRY_ATTEMPTS=1

# General Settings
PROD_TIMEOUT=15000
PROD_RETRY_ATTEMPTS=1

# ====================================
# Authentication Credentials
# ====================================
# For Bearer token authentication
AUTH_USERNAME=test_user
AUTH_PASSWORD=test_password

# For OAuth2 authentication
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=

# ====================================
# Test Configuration
# ====================================
# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Number of retry attempts for failed requests
RETRY_ATTEMPTS=3

# Enable verbose logging
VERBOSE_LOGGING=false
