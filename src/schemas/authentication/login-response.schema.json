{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["token", "expiresIn", "user"],
  "properties": {
    "token": {
      "type": "string",
      "description": "JWT authentication token"
    },
    "expiresIn": {
      "type": "number",
      "description": "Token expiration time in seconds"
    },
    "user": {
      "type": "object",
      "required": ["id", "email", "name"],
      "properties": {
        "id": {
          "type": "number"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "name": {
          "type": "string"
        }
      }
    }
  }
}
